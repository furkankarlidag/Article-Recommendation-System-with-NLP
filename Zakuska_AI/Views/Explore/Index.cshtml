@{
    ViewData["Title"] = "Explore";
    Layout = "_Layout2";
}

<div class="container-fluid px-0">
    <div class="row">
        <div class="col-md-3 shadow-sm p-3 mb-5 bg-white rounded">
            <h3>İlgi Alanları</h3>
            <ul class="list-group">
                @foreach (var interest in Model.Interests)
                {
                    <li class="list-group-item">@interest</li>
                }
            </ul>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12 shadow-sm p-3 mb-5 bg-white rounded">
                    <h3><strong>Makale Önerileri</strong></h3>
                    <ul class="list-group" id="suggestionsList">
                        @for (var i = 0; i < Model.Suggestions.Length; i++)
                        {
                            var item = Model.Suggestions[i];
                            <li class="list-group-item d-flex justify-content-between align-items-center" data-id="@i">
                                <strong>@item</strong>
                              
                                    <input type="hidden" name="makaleId" value="@i" />
                                    <button type="submit" name="action" value="dislike" class="btn btn-sm btn-danger">Dislike</button>
                                    <button type="submit" name="action" value="like" class="btn btn-sm btn-success">Like</button>
                                
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 shadow-sm p-3 mb-5 bg-white rounded">
                    <h3><strong>Buradan arama yapabilirsiniz</strong></h3>
                    <form asp-controller="Makale" asp-action="IslemYap" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Ara..." name="searchQuery">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Ara</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const suggestionList = document.getElementById("suggestionsList");
        suggestionList.addEventListener("click", function (event) {
            if (event.target.tagName.toLowerCase() === "button") {
                const button = event.target;
                const listItem = button.closest(".list-group-item");

                const buttons = listItem.querySelectorAll("button");
                buttons.forEach(function (btn) {
                    btn.disabled = true;
                    btn.style.backgroundColor = "#dddddd";
                });

                // Formu gönder
                //listItem.querySelector('form').submit();
            }
        });
    });
</script>

